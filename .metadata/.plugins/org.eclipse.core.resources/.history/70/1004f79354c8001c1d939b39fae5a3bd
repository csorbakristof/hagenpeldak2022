
public class Bubblesort {
	public void sort(int[] feld) {

		for (int i = 0; i < feld.length - 1; i++) {
			boolean sorted = true;
			for (int j = 0; j < feld.length - 1 - i; j++) {
				if (feld[j] > feld[j + 1]) {
					int temp = feld[j];
					feld[j] = feld[j + 1];
					feld[j + 1] = temp;
					sorted = false;
				}
			}
		if (sorted) {
			break;
		}
	}
}
